<div class="container text-center">
  <svg version="1.1" id="terrain" width="1024" height="500">

    <script type="application/ecmascript">
        function circle_click(evt) {
            var circle = evt.target;
            var currentRadius = circle.getAttribute("r");
            if (currentRadius == 50) {
                circle.setAttribute("r", currentRadius * 2);
            } else {
                circle.setAttribute("r", currentRadius * 0.5);
            }
        }
    </script>

    <rect style="fill: #fdff99;" height="500" width="1024">
    </rect>

    <circle class="news" onclick="circle_click(evt)" cx="10%" cy="50%" r="10%"
            fill="blue"/>

    <circle class="news" onclick="circle_click(evt)" cx="20%" cy="50%" r="10%"
            fill="red"/>

    <circle class="news" onclick="circle_click(evt)" cx="30%" cy="50%" r="10%"
            fill="white"/>

    <circle class="news" onclick="circle_click(evt)" cx="40%" cy="50%" r="10%"
            fill="green"/>

    <circle class="news" onclick="circle_click(evt)" cx="50%" cy="50%" r="10%"
            fill="violet"/>

    <circle class="news" onclick="circle_click(evt)" cx="60%" cy="50%" r="10%"
            fill="orange"/>

    <rect style="fill: #0020ff;" height="10%" width="10%">
    </rect>

  </svg>
</div>
